{
  "name": "@soundcn/engine",
  "version": "0.1.0",
  "description": "Sound engine abstraction for soundcn â€” Web Audio API implementation",
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.9.2"
  }
}
