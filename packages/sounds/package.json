{
  "name": "@soundcn/sounds",
  "version": "0.1.0",
  "description": "Sound effects for React and React Native â€” useSound hook + 700+ sounds",
  "sideEffects": false,
  "scripts": {
    "build": "tsup --format esm,cjs --dts --clean",
    "dev": "tsup --format esm,cjs --dts --watch",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "react-native": {
        "types": "./dist/index.native.d.ts",
        "import": "./dist/index.native.js",
        "require": "./dist/index.native.cjs"
      },
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sounds": {
      "types": "./dist/sounds/index.d.ts",
      "import": "./dist/sounds/index.js",
      "require": "./dist/sounds/index.cjs"
    },
    "./sounds/*": {
      "types": "./dist/sounds/*.d.ts",
      "import": "./dist/sounds/*.js",
      "require": "./dist/sounds/*.cjs"
    },
    "./catalog": {
      "types": "./dist/catalog.d.ts",
      "import": "./dist/catalog.js",
      "require": "./dist/catalog.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "dependencies": {
    "@soundcn/engine": "workspace:*"
  },
  "peerDependencies": {
    "expo-av": ">=15.0.0",
    "react": ">=18",
    "react-native": ">=0.73"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "expo-av": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "19.1.2",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2"
  }
}
